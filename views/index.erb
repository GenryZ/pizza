<h1>Welcome to pizza</h1>


<div class="row">

<% @products.each do |p| %>

<div class="col-xs-12 col-md-4">
	<div>
	<%=p.title%>
	</div>
	<div>
	<img src="<%=p.path_to_image%>">
	</div>
	<div>
	<%=p.description%>
	</div>
	<div>
		Price :
	<%=p.price%> RUB
	</div>
	<div>
		Size :
	<%=p.size%> cm
	</div>
	<button type="button" class="btn btn-success">Заказать</button>
</div>

<% end %>

</div>
