<h1>Hello</h1>

<table class="table table-bordered">
      <thead>
        <tr>
          <th>â„–</th>
          <th>Name</th>
          <th>Price</th>
          <th>Qnty</th>
        </tr>
      </thead>
      <tbody>
      	<% total_price = 0 %>
      	<% total_qnty = 0 %>
      	<%@items.each_with_index do |item, i|%>
      	<% i = i + 1 %>
        <tr>
          <th scope="row"><%= i %></th>
          <td><%= item[0].title %></td>
          <td><%= item[0].price %></td>
          <td><%= item[1] %></td>
        </tr>
        <% total_price += item[0].price * item[1].to_i%>
        <% total_qnty += item[1].to_i %>
        <% end %>
        <tr>
          <td></td>
          <td></td>
          <td><%= total_price %></td>
          <td><%= total_qnty %></td>
        </tr>
      </tbody>
    </table>